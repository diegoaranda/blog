<div style="width:80%; margin:0 auto;">
	
	<h1>Nuevo Articulo</h1>
	
	<%= form_for(@article) do |f| %>
		<%  @article.errors.full_messages.each do |message| %> 
			<div class="be-red white field">
				* <%= message%>	
			</div>
		<% end %>
		
		<div class = "field">
			<%= f.text_field :title, placeholder: "Titulo", class:"form-control"%>
		</div>
		
		<div class="field">
			<%= f.text_area :body, placeholder: "Escribe aqui tu articulo", style:"height:50px", class:"form-control"%>
		</div>

		<div class = "field">
			<%= f.submit "Guardar", class:"btn be-red white top-space"%>
		</div>

	<% end %>
</div>