<header>
	<nav class="be-red white large-padding">
		<ul class="no-list row center-xs middle-xs puntos">
				
				<li class="col-md">
					<h1 class="no-margin" id="logo"><%=link_to "Blog de Diego", root_path%></h1>
				</li>
				<li class="col-md">
					<%= link_to "Articulos", articles_path %>
				</li>
				
				
				<% @categories.each do |category|%>
					<li class="col-md">
						<%= category.name %>
					</li>
				<%end%>
				
				<li>
					<% if user_signed_in? %>
						<li class="col-md">
							<%= link_to "Cerrar sesion", destroy_user_session_path, method: :delete %>
						</li>
					<% else %>
						<li class="col-md">
								<%= link_to "Iniciar sesion", new_user_session_path %>
						</li>
						<li class="col-md">
								<%= link_to "Crear cuenta", new_user_registration_path %>
						</li>
					<% end %>
						
				</li>
		</ul>
	</nav>
</header>